h1 Ideas
=link_to "Add New Idea", new_idea_path

ul
  - @ideas.each do |idea|
    li.idea.row
      .col-md-2
        .votes = idea.votes
        .upvote == image_tag "golden_boy.png", data: {"idea-id" => idea.id}
      .col-md-10
        h3.title = idea.title
        .description.lead = idea.description
      

javascript:
  $('.upvote img').click( function() {
    $el = $(this);
    url = "/ideas/" + $el.data('idea-id') + "/upvote";
    console.log(url);
    $.ajax({
      url: url,
      type: 'put'
    }).done(function(data) {
      console.log(data.votes);
      $el.parent().parent().find('.votes').text(data.votes);
    });
  });
